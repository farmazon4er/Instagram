
<h1>Posts</h1>

<table class="table">
  <thead>
  <tr>
    <th>User</th>
  <th>Title</th>
  <th>Message</th>
    <th>Likes</th>
  <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% if !@posts.nil? %>
  <% @posts.each do |post| %>
  <tr>
    <td><%= link_to(post.user.name, user_path(post.user)) %></td>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= post.likes.count %></td>
    <td><%= image_tag post.image_url %></td>

    <td><%= link_to "Show", user_post_path(post.user_id, post) %></td>
  </tr>
  <% end %>
  <% end %>
  </tbody>
</table>

<br>

