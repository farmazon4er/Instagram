
<h1>Posts</h1>

<table>
  <thead>
  <tr>
  <th>Title</th>
  <th>Message</th>
  <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= image_tag post.image_url %></td>

    <td><%= link_to "Show", user_post_path(post.user_id, post) %></td>


  </tr>
  <% end %>
  </tbody>
</table>

<br>

