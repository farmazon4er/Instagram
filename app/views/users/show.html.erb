<h1>User info</h1>
<% if current_user == @user %>
<%= link_to "Edit", edit_user_path(@user) %>
<% end %>

<br>
Email: <%= @user.email %>
<br>
Name: <%= @user.name %>
<br>
Bio: <%= @user.bio %>
<br>
<%= link_to "Posts", user_posts_path(@user) %>
<br>

<%= link_to "Followers", user_followers_path(@user) %>
<%= link_to "Following", user_followings_path(@user) %>

<% if current_user.present? && current_user != @user %>
<%= link_to("Follow", follows_path(following_id: @user.id), method: :post) %>
  <br>
  <%= link_to("Unfollow", follow_path(following_id: @user.id), method: :delete) %>
<% end %>