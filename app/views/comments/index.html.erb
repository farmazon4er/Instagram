<h1> Comments </h1>
<% @comments.each do |comment| %>
  <p> User: <%= link_to(comment.user.name, user_path(comment.user)) %>  | Comment: <%= comment.comment_text %>
  <% if current_user == comment.user %>
    <%= link_to "Delete comment", user_post_comment_path(comment.user, comment.post, comment.id), method: :delete %>
  </p>
      <% end %>

<% end %>
<br>
<%= link_to 'back', user_post_path(@user, @post) %>